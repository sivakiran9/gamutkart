pipeline {
    agent {
            docker 'kiran787/tomcat:latest' }
         
         } 
     stages {
        stage('Checkout') {
            steps {
                      checkout scm   
            }
        } 
        stage('Build') {
                steps {
                           sh ('/usr/share/maven/bin/mvn install')

            } 
            }      
     } 
           
